---
// CtaSection.astro - Final CTA section for homepage and pillar pages
interface Props {
  headline?: string;
  subtext?: string;
  ctaLabel?: string;
  variant?: 'light' | 'dark';
}

const {
  headline = "Ready to get clear answers?",
  subtext = "Stop guessing. Book a 60-minute consultation and leave with an action plan.",
  ctaLabel = "Book a Consultation â€” $150",
  variant = 'dark',
} = Astro.props;

const isDark = variant === 'dark';
---

<section
  id="cta"
  class:list={[
    'section-spacing',
    isDark ? 'bg-[#1B3A5C] text-white' : 'bg-[#FAFAF8] text-[#1B3A5C] border-t border-[#E5E7EB]',
  ]}
>
  <div class="container-page">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class:list={['font-heading text-3xl md:text-4xl font-bold mb-4', isDark ? 'text-white' : 'text-[#1B3A5C]']}>
        {headline}
      </h2>
      <p class:list={['text-lg mb-8', isDark ? 'text-white/70' : 'text-[#6B7280]']}>
        {subtext}
      </p>
      <div class="flex flex-col sm:flex-row gap-3 justify-center">
        <a
          href="/book"
          class="inline-flex items-center justify-center gap-2 bg-[#E8913A] text-white font-semibold px-8 py-4 rounded-xl hover:bg-amber-500 transition-all duration-200 shadow-sm hover:shadow-md text-base"
        >
          {ctaLabel}
        </a>
        <a
          href="/how-it-works"
          class:list={[
            'inline-flex items-center justify-center gap-2 font-semibold px-8 py-4 rounded-xl border transition-all duration-200 text-base',
            isDark
              ? 'border-white/30 text-white hover:border-white hover:bg-white/10'
              : 'border-[#E5E7EB] text-[#1B3A5C] hover:border-[#1B3A5C]',
          ]}
        >
          See how it works
        </a>
      </div>

      <!-- Reassurance -->
      <p class:list={['text-sm mt-6', isDark ? 'text-white/40' : 'text-[#6B7280]']}>
        No commitment. If we can't help, we'll tell you upfront.
      </p>
    </div>
  </div>
</section>
