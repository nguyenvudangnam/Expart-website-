---
// blog/index.astro - Premium blog listing page
import PageLayout from '../../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const posts = allPosts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<PageLayout
  title="Blog"
  description="Practical legal tips, regulatory updates, and guides for expats living in Vietnam."
>

  <section class="section-spacing bg-background">
    <div class="container-page">
      <div class="max-w-3xl mx-auto">

        <!-- Header -->
        <div class="mb-10">
          <div class="divider-gold mb-5"></div>
          <h1 class="font-heading text-3xl md:text-4xl font-bold text-navy mb-3">Blog</h1>
          <p class="text-text-muted text-lg">
            Practical tips, regulatory updates, and real-world guidance for expats in Vietnam.
          </p>
        </div>

        <!-- Post list -->
        {posts.length > 0 ? (
          <div class="flex flex-col gap-5">
            {posts.map(post => (
              <a
                href={`/blog/${post.id}`}
                class="card-premium group block p-6 rounded-xl border border-border-light bg-surface"
              >
                <!-- Tags -->
                {post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.map((tag: string) => (
                      <span class="text-xs font-medium text-navy bg-navy/[0.06] px-2 py-0.5 rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}

                <h2 class="font-heading text-lg font-bold text-navy group-hover:text-gold transition-colors mb-2">
                  {post.data.title}
                </h2>

                <p class="text-text-muted text-sm leading-relaxed mb-3">
                  {post.data.description}
                </p>

                <div class="flex items-center gap-3 text-xs text-text-muted">
                  <time datetime={post.data.date}>
                    {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </time>
                  <span>Â·</span>
                  <span>{post.data.author}</span>
                </div>
              </a>
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <p class="text-text-muted">No posts yet. Check back soon!</p>
          </div>
        )}
      </div>
    </div>
  </section>

</PageLayout>
