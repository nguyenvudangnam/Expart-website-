---
// index.astro - Homepage
import PageLayout from '../layouts/PageLayout.astro';
import Hero from '../components/Hero.astro';
import PainPoints from '../components/PainPoints.astro';
import Differentiators from '../components/Differentiators.astro';
import Testimonials from '../components/Testimonials.astro';
import CtaSection from '../components/CtaSection.astro';

// LegalService Schema markup
const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "LegalService",
  "name": "Expat Legal Vietnam",
  "description": "Plain-English legal consultation for expats navigating Vietnam's visa, renting, business, and family legal system.",
  "url": "https://expatlegalvietnam.com",
  "areaServed": {
    "@type": "Country",
    "name": "Vietnam"
  },
  "availableLanguage": "English",
  "serviceType": ["Visa Consultation", "Business Registration", "Property Law", "Family Law"],
  "priceRange": "$$"
};
---

<PageLayout
  title="Expat Legal Vietnam"
  description="Plain-English legal guidance for expats in Vietnam. Visa, renting, business, and family questions answered clearly. Book a consultation today."
>
  <!-- LegalService structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(schemaMarkup)} />

  <Hero />
  <PainPoints />
  <Differentiators />
  <Testimonials />
  <CtaSection />
</PageLayout>
