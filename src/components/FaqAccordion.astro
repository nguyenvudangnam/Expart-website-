---
// FaqAccordion.astro - FAQ accordion component
import faqData from '../data/faq.json';

interface Props {
  items?: { question: string; answer: string }[];
}

const { items = faqData } = Astro.props;
---

<div class="flex flex-col gap-3" id="faq-accordion">
  {items.map((item, i) => (
    <details
      class="group border border-[#E5E7EB] rounded-xl bg-white overflow-hidden transition-all duration-200 hover:border-[#1B3A5C]/30"
    >
      <summary class="flex items-center justify-between gap-4 px-5 py-4 cursor-pointer select-none list-none text-left">
        <h3 class="font-heading font-semibold text-[#1B3A5C] text-sm md:text-base pr-2">
          {item.question}
        </h3>
        <span class="shrink-0 w-5 h-5 flex items-center justify-center text-[#6B7280] transition-transform duration-200 group-open:rotate-45" aria-hidden="true">
          <svg width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
            <path d="M7 1v12M1 7h12"/>
          </svg>
        </span>
      </summary>
      <div class="px-5 pb-4">
        <p class="text-[#6B7280] text-sm leading-relaxed">{item.answer}</p>
      </div>
    </details>
  ))}
</div>
