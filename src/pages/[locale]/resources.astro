  { icon: 'ğŸ›‚', guideHref: '/visa', tags: ['Visa', 'Immigration'] },
  { icon: 'ğŸ’¼', guideHref: '/business', tags: ['Business', 'LLC'] },
  { icon: 'ğŸ‘¨â€ğŸ‘©â€ğŸ‘§', guideHref: '/family', tags: ['Family', 'Documents'] },
  { icon: 'ğŸ“„', guideHref: '/documents', tags: ['Documents', 'Apostille'] },
];
---

<PageLayout
  title={t(locale, 'resources.title')}
  description={t(locale, 'resources.subtitle')}
  locale={locale}
>

  <section class="section-spacing bg-background relative">
    <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-border to-transparent"></div>
    <div class="container-page">

      <!-- Header -->
      <div class="max-w-3xl mx-auto text-center mb-12">
        <div class="divider-gold mx-auto mb-6"></div>
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-navy mb-4">
          {t(locale, 'resources.title')}
        </h1>
        <p class="text-lg text-text-muted leading-relaxed">
          {t(locale, 'resources.subtitle')}
        </p>
      </div>

      <!-- Resources grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {resources.map((resource, idx) => (
          <div class="card-premium p-6 rounded-2xl border border-border-light bg-surface">
            <div class="flex items-start gap-4">
              <span class="text-3xl shrink-0 w-12 h-12 flex items-center justify-center rounded-xl bg-cream" aria-hidden="true">{resource.icon}</span>
              <div class="flex-1">
                <div class="flex gap-2 mb-2">
                  {resource.tags.map(tag => (
                    <span class="text-xs font-medium text-navy bg-navy/[0.06] px-2 py-0.5 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>

                <h2 class="font-heading text-lg font-bold text-navy mb-1">{t(locale, `resources.${idx}.title`)}</h2>
                <p class="text-text-muted text-sm leading-relaxed mb-4">{t(locale, `resources.${idx}.desc`)}</p>

                <div class="flex flex-wrap gap-2">
                  <div class="w-full p-3 rounded-lg bg-cream/50 border border-border-light">
                    <p class="text-xs text-text-muted mb-2">{t(locale, 'resources.emailPrompt')}</p>
                    <form class="flex gap-2" onsubmit="return false;">
                      <input
                        type="email"
                        placeholder="your@email.com"
                        class="flex-1 text-sm px-3 py-2 rounded-lg border border-border-light bg-surface text-text-primary placeholder:text-text-muted/60 focus:outline-none focus:border-gold transition-colors"
                        aria-label="Email address"
                      />
                      <button
                        type="submit"
                        class="shrink-0 bg-navy text-white text-sm font-semibold px-4 py-2 rounded-lg hover:bg-navy-light transition-all duration-200"
                      >
                        {t(locale, 'resources.sendButton')}
                      </button>
                    </form>
                  </div>

                  <a
                    href={localizedUrl(locale, resource.guideHref)}
                    class="text-xs text-gold font-medium hover:text-navy hover:underline transition-colors"
                  >
                    {t(locale, 'resources.readGuide')}
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CtaSection
    headline={t(locale, 'resources.ctaHeadline')}
    subtext={t(locale, 'resources.ctaSubtext')}
    variant="dark"
    locale={locale}
  />

</PageLayout>
