---
// [locale]/blog/[id].astro - Localized individual blog post template
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Nav from '../../../components/Nav.astro';
import Footer from '../../../components/Footer.astro';
import CtaBar from '../../../components/CtaBar.astro';
import BackToTop from '../../../components/BackToTop.astro';
import CtaSection from '../../../components/CtaSection.astro';
import { getCollection, render } from 'astro:content';
import { getNonDefaultLocales, t, localizedUrl } from '../../../i18n/utils';
import { localeTags, type Locale } from '../../../i18n/config';

export async function getStaticPaths() {
  const locales = getNonDefaultLocales();
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return locales.flatMap(locale =>
    posts.map(post => ({
      params: { locale, id: post.id },
      props: { locale, post },
    }))
  );
}

const { locale, post } = Astro.props as { locale: Locale; post: any };
const { Content } = await render(post);

// Date formatting locale tag
const dateLang = localeTags[locale] ?? 'en-US';
---

<BaseLayout title={post.data.title} description={post.data.description} locale={locale}>
  <CtaBar locale={locale} />
  <Nav locale={locale} />

  <article class="bg-background min-h-screen">
    <div class="container-reading py-10 lg:py-16">

      <!-- Breadcrumb -->
      <nav class="text-sm text-text-muted mb-6" aria-label="Breadcrumb">
        <ol class="flex flex-wrap items-center gap-1.5">
          <li><a href={localizedUrl(locale, '/')} class="hover:text-navy transition-colors">{t(locale, 'breadcrumb.home')}</a></li>
          <li class="flex items-center gap-1.5">
            <span aria-hidden="true" class="text-border">/</span>
            <a href={localizedUrl(locale, '/blog')} class="hover:text-navy transition-colors">{t(locale, 'blog.title')}</a>
          </li>
          <li class="flex items-center gap-1.5">
            <span aria-hidden="true" class="text-border">/</span>
            <span class="text-text-primary font-medium truncate max-w-[200px]">{post.data.title}</span>
          </li>
        </ol>
      </nav>

      <!-- Header -->
      <header class="mb-10">
        {post.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-4">
            {post.data.tags.map((tag: string) => (
              <span class="text-xs font-medium text-navy bg-navy/[0.06] px-2.5 py-1 rounded-full">
                {tag}
              </span>
            ))}
          </div>
        )}

        <h1 class="font-heading text-3xl md:text-4xl font-bold text-navy leading-tight mb-4">
          {post.data.title}
        </h1>

        <div class="flex items-center gap-3 text-sm text-text-muted">
          <time datetime={post.data.date}>
            {new Date(post.data.date).toLocaleDateString(dateLang, { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          <span>&middot;</span>
          <span>{post.data.author}</span>
        </div>
      </header>

      <!-- Post content -->
      <div class="prose-content">
        <Content />
      </div>

      <!-- Post footer -->
      <div class="mt-12 pt-8 border-t border-border-light">
        <div class="p-6 rounded-xl bg-surface border border-border-light shadow-[0_1px_3px_rgba(0,0,0,0.04)]">
          <p class="text-sm text-text-muted mb-3">
            <strong class="text-navy">{t(locale, 'blog.needAdvice')}</strong> {t(locale, 'blog.needAdviceText')}
          </p>
          <a
            href={localizedUrl(locale, '/book')}
            class="inline-flex items-center gap-2 btn-gold text-white text-sm font-semibold px-5 py-2.5 rounded-lg"
          >
            {t(locale, 'blog.bookConsultation')}
          </a>
        </div>

        <div class="mt-6 text-center">
          <a href={localizedUrl(locale, '/blog')} class="text-navy text-sm font-medium hover:text-gold transition-colors">
            {t(locale, 'blog.backToAll')}
          </a>
        </div>
      </div>
    </div>
  </article>

  <BackToTop />
  <Footer locale={locale} />
</BaseLayout>

<style>
  .prose-content :global(h2) {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: #0F2337;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  .prose-content :global(h3) {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 600;
    color: #0F2337;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  .prose-content :global(p) {
    color: #1A1A1A;
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  .prose-content :global(ul), .prose-content :global(ol) {
    color: #1A1A1A;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .prose-content :global(li) {
    line-height: 1.75;
    margin-bottom: 0.25rem;
  }
  .prose-content :global(ul li) { list-style-type: disc; }
  .prose-content :global(ol li) { list-style-type: decimal; }
  .prose-content :global(strong) { color: #0F2337; }
  .prose-content :global(a) {
    color: #C8944A;
    text-decoration: underline;
  }
  .prose-content :global(a:hover) { color: #0F2337; }
</style>
