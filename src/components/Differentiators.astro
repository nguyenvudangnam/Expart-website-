    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {differentiators.map(item => (
        <div class="p-6 rounded-xl bg-white/8 border border-white/10 hover:bg-white/12 transition-all duration-200">
          <span class="text-3xl mb-4 block" aria-hidden="true">{item.icon}</span>
          <h3 class="font-heading font-semibold text-white text-base mb-2">{item.title}</h3>
          <p class="text-white/60 text-sm leading-relaxed">{item.description}</p>
        </div>
      ))}
    </div>

    <!-- Free guides section -->
    <div id="guides">
      <div class="text-center max-w-2xl mx-auto mb-8">
        <h2 class="font-heading text-2xl md:text-3xl font-bold mb-3">
          Free guides for common situations
        </h2>
        <p class="text-white/70">
          Start here. If you need more, book a call.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 max-w-5xl mx-auto">
        {pillar_pages.map(page => (
          <a
            href={`/${page.slug}`}
            class="group flex items-start gap-4 p-5 rounded-xl bg-white/8 border border-white/10 hover:bg-white/15 hover:border-[#E8913A]/50 transition-all duration-200"
          >
            <span class="text-2xl shrink-0" aria-hidden="true">{page.icon}</span>
            <div>
              <h3 class="font-heading font-semibold text-white text-sm mb-1 group-hover:text-[#E8913A] transition-colors">
                {page.title}
              </h3>
              <p class="text-white/50 text-xs leading-relaxed">{page.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
