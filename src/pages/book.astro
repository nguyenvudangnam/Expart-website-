---
// book.astro - Booking page with Calendly placeholder embed
import PageLayout from '../layouts/PageLayout.astro';
import FaqAccordion from '../components/FaqAccordion.astro';
---

<PageLayout
  title="Book a Consultation"
  description="Schedule a 60-minute legal consultation for expats in Vietnam. Get clear, actionable answers specific to your situation."
>

  <section class="section-spacing bg-[#FAFAF8]">
    <div class="container-page">
      <div class="max-w-3xl mx-auto text-center mb-10">
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-[#1B3A5C] mb-4">
          Book Your Consultation
        </h1>
        <p class="text-lg text-[#6B7280] leading-relaxed mb-6">
          Pick a time that works for you. You'll get a confirmation email with a brief intake form so I can prepare for our call.
        </p>

        <!-- Trust signals -->
        <div class="flex flex-wrap justify-center gap-4 text-sm text-[#6B7280]">
          <span class="flex items-center gap-1.5">
            <span class="text-[#059669]">âœ“</span> 60 minutes
          </span>
          <span class="flex items-center gap-1.5">
            <span class="text-[#059669]">âœ“</span> $150 USD
          </span>
          <span class="flex items-center gap-1.5">
            <span class="text-[#059669]">âœ“</span> Written follow-up
          </span>
          <span class="flex items-center gap-1.5">
            <span class="text-[#059669]">âœ“</span> English only
          </span>
        </div>
      </div>

      <!-- Calendly embed placeholder -->
      <div class="max-w-3xl mx-auto mb-12">
        <div
          id="calendly-embed"
          class="bg-white rounded-xl border border-[#E5E7EB] shadow-sm overflow-hidden min-h-[600px] flex items-center justify-center"
        >
          <!-- Replace this placeholder with actual Calendly widget -->
          <div class="text-center p-12">
            <div class="w-16 h-16 rounded-full bg-[#1B3A5C]/10 flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl" aria-hidden="true">ðŸ“…</span>
            </div>
            <h2 class="font-heading text-xl font-bold text-[#1B3A5C] mb-2">Calendly Widget Goes Here</h2>
            <p class="text-[#6B7280] text-sm mb-6 max-w-md mx-auto">
              Replace this placeholder with your Calendly embed code. Add the following script to activate:
            </p>
            <code class="text-xs bg-[#FAFAF8] text-[#1B3A5C] px-4 py-2 rounded-lg border border-[#E5E7EB] font-mono block max-w-lg mx-auto text-left">
              &lt;div class="calendly-inline-widget"<br/>
              &nbsp;&nbsp;data-url="https://calendly.com/YOUR-LINK"<br/>
              &nbsp;&nbsp;style="min-width:320px;height:700px;"&gt;<br/>
              &lt;/div&gt;<br/>
              &lt;script src="https://assets.calendly.com/assets/external/widget.js"&gt;&lt;/script&gt;
            </code>

            <!-- Temporary direct CTA while Calendly isn't set up -->
            <div class="mt-8 p-4 rounded-xl bg-[#E8913A]/10 border border-[#E8913A]/30">
              <p class="text-sm text-[#2D2D2D] mb-3">
                <strong>In the meantime:</strong> Send an email to book your consultation.
              </p>
              <a
                href="mailto:hello@expatlegalvietnam.com?subject=Consultation%20Booking%20Request"
                class="inline-flex items-center gap-2 bg-[#E8913A] text-white text-sm font-semibold px-5 py-2.5 rounded-lg hover:bg-amber-500 transition-all duration-200"
              >
                Email to Book â†’
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- What to expect -->
      <div class="max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-2xl font-bold text-[#1B3A5C] mb-6 text-center">
          What to expect after booking
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="p-5 rounded-xl border border-[#E5E7EB] bg-white text-center">
            <span class="text-2xl mb-3 block" aria-hidden="true">ðŸ“§</span>
            <h3 class="font-semibold text-[#1B3A5C] text-sm mb-1">Confirmation + Intake Form</h3>
            <p class="text-[#6B7280] text-xs">Brief form so I can prepare for your specific situation.</p>
          </div>
          <div class="p-5 rounded-xl border border-[#E5E7EB] bg-white text-center">
            <span class="text-2xl mb-3 block" aria-hidden="true">ðŸ’¬</span>
            <h3 class="font-semibold text-[#1B3A5C] text-sm mb-1">60-Min Call</h3>
            <p class="text-[#6B7280] text-xs">Video or voice call. Clear answers, no jargon.</p>
          </div>
          <div class="p-5 rounded-xl border border-[#E5E7EB] bg-white text-center">
            <span class="text-2xl mb-3 block" aria-hidden="true">âœ…</span>
            <h3 class="font-semibold text-[#1B3A5C] text-sm mb-1">Written Summary</h3>
            <p class="text-[#6B7280] text-xs">Action plan email within 24h + 48h email follow-up.</p>
          </div>
        </div>
      </div>

      <!-- FAQ section -->
      <div class="max-w-3xl mx-auto">
        <h2 class="font-heading text-2xl font-bold text-[#1B3A5C] mb-6 text-center">
          Common Questions
        </h2>
        <FaqAccordion />
      </div>
    </div>
  </section>

</PageLayout>
