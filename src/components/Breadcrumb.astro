---
// Breadcrumb.astro - Navigation breadcrumb for pillar pages
interface Props {
  items: { label: string; href?: string }[];
}

const { items } = Astro.props;
---

<nav class="text-sm text-[#6B7280] mb-6" aria-label="Breadcrumb">
  <ol class="flex flex-wrap items-center gap-1.5">
    <li>
      <a href="/" class="hover:text-[#1B3A5C] transition-colors">Home</a>
    </li>
    {items.map((item, i) => (
      <li class="flex items-center gap-1.5">
        <span aria-hidden="true" class="text-[#E5E7EB]">/</span>
        {item.href && i < items.length - 1 ? (
          <a href={item.href} class="hover:text-[#1B3A5C] transition-colors">{item.label}</a>
        ) : (
          <span class="text-[#2D2D2D] font-medium">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
