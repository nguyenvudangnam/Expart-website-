---
// PillarLayout.astro - Premium pillar page template (i18n-aware)
import BaseLayout from './BaseLayout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import CtaBar from '../components/CtaBar.astro';
import ReadingProgress from '../components/ReadingProgress.astro';
import BackToTop from '../components/BackToTop.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import TableOfContents from '../components/TableOfContents.astro';
import LeadMagnet from '../components/LeadMagnet.astro';
import CtaSection from '../components/CtaSection.astro';
import { t, getLocaleFromUrl, localizedUrl } from '../i18n/utils';
import type { Locale } from '../i18n/config';

interface Props {
  title: string;
  description: string;
  lastUpdated: string;
  breadcrumbLabel: string;
  headings: { id: string; text: string; depth: number }[];
  leadMagnet?: { title: string; description: string };
  currentSlug: string;
  locale?: Locale;
}

const {
  title,
  description,
  lastUpdated,
  breadcrumbLabel,
  headings,
  leadMagnet,
  currentSlug,
  locale: localeProp,
} = Astro.props;

const locale = localeProp ?? getLocaleFromUrl(Astro.url);

// Pillar page slugs for related guides
const pillarSlugs = ['renting', 'visa', 'business', 'family', 'documents'] as const;
const pillarIcons: Record<string, string> = {
  renting: 'ðŸ ', visa: 'ðŸ›‚', business: 'ðŸ’¼', family: 'ðŸ‘¨â€ðŸ‘©â€ðŸ‘§', documents: 'ðŸ“„',
};
const relatedGuides = pillarSlugs
  .filter(s => s !== currentSlug)
  .map(slug => ({
    slug,
    title: t(locale, `pillarPages.${slug}.title`),
    description: t(locale, `pillarPages.${slug}.desc`),
    icon: pillarIcons[slug],
  }));
---

<BaseLayout title={title} description={description} locale={locale}>
  <CtaBar locale={locale} />
  <Nav locale={locale} />
  <ReadingProgress />

  <article class="bg-background min-h-screen">
    <div class="container-page py-8 lg:py-12">
      <Breadcrumb items={[{ label: breadcrumbLabel }]} locale={locale} />

      <!-- Header -->
      <header class="max-w-3xl mb-8">
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-navy leading-tight mb-4">
          {title}
        </h1>
        <p class="text-lg text-text-muted leading-relaxed mb-3">{description}</p>
        <p class="text-xs text-text-muted">{t(locale, 'pillar.lastUpdated')} {lastUpdated}</p>

        <!-- Need help now? CTA -->
        <div class="mt-6 p-4 rounded-xl bg-gradient-to-r from-gold/10 to-gold-bright/5 border border-gold/20">
          <p class="text-sm text-text-primary">
            <strong class="text-navy">{t(locale, 'pillar.needHelp')}</strong> {t(locale, 'pillar.needHelpText')}
            <a href={localizedUrl(locale, '/book')} class="text-gold font-semibold underline hover:text-navy transition-colors">
              {t(locale, 'pillar.needHelpLink')}
            </a> {t(locale, 'pillar.needHelpSuffix')}
          </p>
        </div>
      </header>

      <!-- Content area with TOC sidebar -->
      <div class="flex gap-12 items-start">
        <!-- Main content -->
        <div class="flex-1 min-w-0 max-w-3xl">

          <!-- Mobile TOC -->
          <TableOfContents headings={headings} locale={locale} />

          <!-- Article content -->
          <div class="prose-content">
            <slot />
          </div>

          <!-- Lead magnet box -->
          {leadMagnet && (
            <LeadMagnet title={leadMagnet.title} description={leadMagnet.description} locale={locale} />
          )}

          <!-- Related guides -->
          <section class="mt-16 pt-10 border-t border-border-light">
            <h2 class="font-heading text-xl font-bold text-navy mb-6">{t(locale, 'pillar.relatedGuides')}</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {relatedGuides.map(guide => (
                <a
                  href={localizedUrl(locale, `/${guide.slug}`)}
                  class="card-premium flex items-start gap-3 p-4 rounded-xl border border-border-light bg-surface group"
                >
                  <span class="text-xl shrink-0 w-8 h-8 flex items-center justify-center rounded-lg bg-cream" aria-hidden="true">{guide.icon}</span>
                  <div>
                    <h3 class="font-semibold text-sm text-navy group-hover:text-gold transition-colors">{guide.title}</h3>
                    <p class="text-xs text-text-muted mt-0.5">{guide.description}</p>
                  </div>
                </a>
              ))}
            </div>
          </section>
        </div>

        <!-- Desktop TOC sidebar -->
        <TableOfContents headings={headings} locale={locale} />
      </div>
    </div>
  </article>

  <!-- Bottom CTA -->
  <CtaSection
    headline={t(locale, 'pillar.ctaHeadline')}
    subtext={t(locale, 'pillar.ctaSubtext')}
    ctaLabel={t(locale, 'pillar.ctaButton')}
    locale={locale}
  />

  <BackToTop />
  <Footer locale={locale} />
</BaseLayout>

<style>
  .prose-content :global(h2) {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: #0F2337;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    scroll-margin-top: 5rem;
  }
  .prose-content :global(h3) {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 600;
    color: #0F2337;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    scroll-margin-top: 5rem;
  }
  .prose-content :global(p) {
    color: #1A1A1A;
    line-height: 1.75;
    margin-bottom: 1rem;
  }
  .prose-content :global(ul), .prose-content :global(ol) {
    color: #1A1A1A;
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  .prose-content :global(li) {
    line-height: 1.75;
    margin-bottom: 0.25rem;
  }
  .prose-content :global(ul li) { list-style-type: disc; }
  .prose-content :global(ol li) { list-style-type: decimal; }
  .prose-content :global(strong) { color: #0F2337; }
  .prose-content :global(a) {
    color: #C8944A;
    text-decoration: underline;
    transition: color 0.2s;
  }
  .prose-content :global(a:hover) { color: #0F2337; }
  .prose-content :global(blockquote) {
    border-left: 3px solid #C8944A;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: #FFFFFF;
    border-radius: 0 0.75rem 0.75rem 0;
    color: #5C6370;
    font-style: italic;
  }
</style>
