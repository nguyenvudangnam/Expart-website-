---
// [locale]/book.astro - Localized booking page
import PageLayout from '../../layouts/PageLayout.astro';
import FaqAccordion from '../../components/FaqAccordion.astro';
import { getNonDefaultLocales, t, localizedUrl } from '../../i18n/utils';
import type { Locale } from '../../i18n/config';

export function getStaticPaths() {
  return getNonDefaultLocales().map(locale => ({
    params: { locale },
    props: { locale },
  }));
}

const { locale } = Astro.props as { locale: Locale };
---

<PageLayout
  title={t(locale, 'book.title')}
  description={t(locale, 'book.subtitle')}
  locale={locale}
>

  <section class="section-spacing bg-background">
    <div class="container-page">
      <div class="max-w-3xl mx-auto text-center mb-10">
        <div class="divider-gold mx-auto mb-6"></div>
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-navy mb-4">
          {t(locale, 'book.title')}
        </h1>
        <p class="text-lg text-text-muted leading-relaxed mb-6">
          {t(locale, 'book.subtitle')}
        </p>

        <!-- Trust signals -->
        <div class="flex flex-wrap justify-center gap-4 text-sm text-text-muted">
          {[0, 1, 2, 3].map(i => (
            <span class="flex items-center gap-1.5">
              <span class="text-success">âœ“</span> {t(locale, `book.trust${i}`)}
            </span>
          ))}
        </div>
      </div>

      <!-- Calendly embed placeholder -->
      <div class="max-w-3xl mx-auto mb-12">
        <div
          id="calendly-embed"
          class="bg-surface rounded-2xl border border-border-light shadow-[0_1px_3px_rgba(0,0,0,0.04)] overflow-hidden min-h-[600px] flex items-center justify-center"
        >
          <div class="text-center p-12">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-navy/10 to-gold/10 flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl" aria-hidden="true">ðŸ“…</span>
            </div>
            <h2 class="font-heading text-xl font-bold text-navy mb-2">{t(locale, 'book.calendlyTitle')}</h2>
            <p class="text-text-muted text-sm mb-6 max-w-md mx-auto">
              {t(locale, 'book.calendlyDesc')}
            </p>
            <code class="text-xs bg-cream text-navy px-4 py-2 rounded-lg border border-border-light font-mono block max-w-lg mx-auto text-left">
              &lt;div class="calendly-inline-widget"<br/>
              &nbsp;&nbsp;data-url="https://calendly.com/YOUR-LINK"<br/>
              &nbsp;&nbsp;style="min-width:320px;height:700px;"&gt;<br/>
              &lt;/div&gt;<br/>
              &lt;script src="https://assets.calendly.com/assets/external/widget.js"&gt;&lt;/script&gt;
            </code>

            <div class="mt-8 p-4 rounded-xl bg-gradient-to-r from-gold/10 to-gold-bright/5 border border-gold/20">
              <p class="text-sm text-text-primary mb-3">
                <strong class="text-navy">{t(locale, 'book.emailCta')}</strong> {t(locale, 'book.emailCtaDesc')}
              </p>
              <a
                href="mailto:hello@expatlegalvietnam.com?subject=Consultation%20Booking%20Request"
                class="inline-flex items-center gap-2 btn-gold text-white text-sm font-semibold px-5 py-2.5 rounded-lg"
              >
                {t(locale, 'book.emailButton')}
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- What to expect -->
      <div class="max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-2xl font-bold text-navy mb-6 text-center">
          {t(locale, 'book.expectTitle')}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {[0, 1, 2].map(i => (
            <div class="card-premium p-5 rounded-xl border border-border-light bg-surface text-center">
              <span class="text-2xl mb-3 block" aria-hidden="true">{['ðŸ“§', 'ðŸ’¬', 'âœ…'][i]}</span>
              <h3 class="font-semibold text-navy text-sm mb-1">{t(locale, `book.expect${i}.title`)}</h3>
              <p class="text-text-muted text-xs">{t(locale, `book.expect${i}.desc`)}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- FAQ section -->
      <div class="max-w-3xl mx-auto">
        <h2 class="font-heading text-2xl font-bold text-navy mb-6 text-center">
          {t(locale, 'book.faqTitle')}
        </h2>
        <FaqAccordion locale={locale} />
      </div>
    </div>
  </section>

</PageLayout>
