---
// BackToTop.astro - Premium scroll back to top button
---

<button
  id="back-to-top"
  class="fixed bottom-20 md:bottom-8 right-4 z-30 w-11 h-11 bg-navy text-white rounded-full shadow-[0_4px_20px_rgba(15,35,55,0.25)] flex items-center justify-center opacity-0 pointer-events-none transition-all duration-300 hover:bg-gold hover:shadow-[0_4px_20px_rgba(200,148,74,0.35)] hover:-translate-y-0.5"
  aria-label="Back to top"
>
  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
    <path d="M8 12V4M4 7l4-4 4 4"/>
  </svg>
</button>

<script>
  const btn = document.getElementById('back-to-top');
  if (btn) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 400) {
        btn.classList.remove('opacity-0', 'pointer-events-none');
      } else {
        btn.classList.add('opacity-0', 'pointer-events-none');
      }
    }, { passive: true });

    btn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }
</script>
