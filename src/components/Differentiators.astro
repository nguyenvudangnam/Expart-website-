import servicesData from '../data/services.json';

const { pillar_pages } = servicesData;

const differentiators = [
  {
    icon: 'ðŸ‡¬ðŸ‡§',
    title: 'Entirely in English',
    description: 'Every consultation, every written summary, every follow-up â€” in plain English. No language barrier.',
  },
  {
    icon: 'âš¡',
    title: 'Specific to your situation',
    description: 'Not generic advice. We talk through your exact circumstances and give you a clear action plan.',
  },
  {
    icon: 'ðŸ“…',
