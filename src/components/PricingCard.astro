---
// PricingCard.astro - Premium pricing card component
interface Props {
  name: string;
  price: number;
  currency: string;
  duration: string;
  description: string;
  features: string[];
  cta: string;
  highlighted?: boolean;
}

const { name, price, currency, duration, description, features, cta, highlighted = false } = Astro.props;
---

<div
  class:list={[
    'relative flex flex-col p-6 rounded-2xl border transition-all duration-300',
    highlighted
      ? 'bg-gradient-to-br from-navy to-navy-mid text-white border-navy shadow-[0_8px_40px_rgba(15,35,55,0.25)] scale-[1.02]'
      : 'bg-surface text-text-primary border-border-light shadow-[0_1px_3px_rgba(0,0,0,0.04)] hover:shadow-[0_8px_30px_rgba(15,35,55,0.08)]',
  ]}
>
  {highlighted && (
    <span class="absolute -top-3 left-1/2 -translate-x-1/2 bg-gradient-to-r from-gold to-gold-bright text-white text-xs font-semibold px-4 py-1 rounded-full shadow-[0_2px_10px_rgba(200,148,74,0.3)]">
      Most Popular
    </span>
  )}

  <h3 class:list={['font-heading text-xl font-bold mb-1', highlighted ? 'text-white' : 'text-navy']}>
    {name}
  </h3>

  <p class:list={['text-sm mb-4', highlighted ? 'text-white/55' : 'text-text-muted']}>
    {description}
  </p>

  <div class="mb-6">
    <span class="font-mono text-4xl font-bold">${price}</span>
    <span class:list={['text-sm ml-1', highlighted ? 'text-white/45' : 'text-text-muted']}>
      {currency} · {duration}
    </span>
  </div>

  <ul class="flex flex-col gap-2.5 mb-8 flex-1">
    {features.map(f => (
      <li class="flex items-start gap-2 text-sm">
        <span class="text-success shrink-0 mt-0.5">✓</span>
        <span class:list={[highlighted ? 'text-white/75' : 'text-text-primary']}>{f}</span>
      </li>
    ))}
  </ul>

  <a
    href="/book"
    class:list={[
      'text-center font-semibold py-3.5 px-6 rounded-xl transition-all duration-300 text-sm',
      highlighted
        ? 'btn-gold text-white'
        : 'bg-navy text-white hover:bg-navy-light shadow-[0_4px_15px_rgba(15,35,55,0.15)]',
    ]}
  >
    {cta} →
  </a>
</div>
