---
// book.astro - Premium booking page with Calendly placeholder
import PageLayout from '../layouts/PageLayout.astro';
import FaqAccordion from '../components/FaqAccordion.astro';
---

<PageLayout
  title="Book a Consultation"
  description="Schedule a 60-minute legal consultation for expats in Vietnam. Get clear, actionable answers specific to your situation."
>

  <section class="section-spacing bg-background">
    <div class="container-page">
      <div class="max-w-3xl mx-auto text-center mb-10">
        <div class="divider-gold mx-auto mb-6"></div>
        <h1 class="font-heading text-3xl md:text-4xl lg:text-5xl font-bold text-navy mb-4">
          Book Your Consultation
        </h1>
        <p class="text-lg text-text-muted leading-relaxed mb-6">
          Pick a time that works for you. You'll get a confirmation email with a brief intake form so I can prepare for our call.
        </p>

        <!-- Trust signals -->
        <div class="flex flex-wrap justify-center gap-4 text-sm text-text-muted">
          <span class="flex items-center gap-1.5">
            <span class="text-success">âœ“</span> 60 minutes
          </span>
          <span class="flex items-center gap-1.5">
            <span class="text-success">âœ“</span> $150 USD
          </span>
          <span class="flex items-center gap-1.5">
            <span class="text-success">âœ“</span> Written follow-up
          </span>
          <span class="flex items-center gap-1.5">
            <span class="text-success">âœ“</span> English only
          </span>
        </div>
      </div>

      <!-- Calendly embed placeholder -->
      <div class="max-w-3xl mx-auto mb-12">
        <div
          id="calendly-embed"
          class="bg-surface rounded-2xl border border-border-light shadow-[0_1px_3px_rgba(0,0,0,0.04)] overflow-hidden min-h-[600px] flex items-center justify-center"
        >
          <div class="text-center p-12">
            <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-navy/10 to-gold/10 flex items-center justify-center mx-auto mb-4">
              <span class="text-3xl" aria-hidden="true">ðŸ“…</span>
            </div>
            <h2 class="font-heading text-xl font-bold text-navy mb-2">Calendly Widget Goes Here</h2>
            <p class="text-text-muted text-sm mb-6 max-w-md mx-auto">
              Replace this placeholder with your Calendly embed code. Add the following script to activate:
            </p>
            <code class="text-xs bg-cream text-navy px-4 py-2 rounded-lg border border-border-light font-mono block max-w-lg mx-auto text-left">
              &lt;div class="calendly-inline-widget"<br/>
              &nbsp;&nbsp;data-url="https://calendly.com/YOUR-LINK"<br/>
              &nbsp;&nbsp;style="min-width:320px;height:700px;"&gt;<br/>
              &lt;/div&gt;<br/>
              &lt;script src="https://assets.calendly.com/assets/external/widget.js"&gt;&lt;/script&gt;
            </code>

            <!-- Temporary direct CTA -->
            <div class="mt-8 p-4 rounded-xl bg-gradient-to-r from-gold/10 to-gold-bright/5 border border-gold/20">
              <p class="text-sm text-text-primary mb-3">
                <strong class="text-navy">In the meantime:</strong> Send an email to book your consultation.
              </p>
              <a
                href="mailto:hello@expatlegalvietnam.com?subject=Consultation%20Booking%20Request"
                class="inline-flex items-center gap-2 btn-gold text-white text-sm font-semibold px-5 py-2.5 rounded-lg"
              >
                Email to Book â†’
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- What to expect -->
      <div class="max-w-3xl mx-auto mb-12">
        <h2 class="font-heading text-2xl font-bold text-navy mb-6 text-center">
          What to expect after booking
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="card-premium p-5 rounded-xl border border-border-light bg-surface text-center">
            <span class="text-2xl mb-3 block" aria-hidden="true">ðŸ“§</span>
            <h3 class="font-semibold text-navy text-sm mb-1">Confirmation + Intake Form</h3>
            <p class="text-text-muted text-xs">Brief form so I can prepare for your specific situation.</p>
          </div>
          <div class="card-premium p-5 rounded-xl border border-border-light bg-surface text-center">
            <span class="text-2xl mb-3 block" aria-hidden="true">ðŸ’¬</span>
            <h3 class="font-semibold text-navy text-sm mb-1">60-Min Call</h3>
            <p class="text-text-muted text-xs">Video or voice call. Clear answers, no jargon.</p>
          </div>
          <div class="card-premium p-5 rounded-xl border border-border-light bg-surface text-center">
            <span class="text-2xl mb-3 block" aria-hidden="true">âœ…</span>
            <h3 class="font-semibold text-navy text-sm mb-1">Written Summary</h3>
            <p class="text-text-muted text-xs">Action plan email within 24h + 48h email follow-up.</p>
          </div>
        </div>
      </div>

      <!-- FAQ section -->
      <div class="max-w-3xl mx-auto">
        <h2 class="font-heading text-2xl font-bold text-navy mb-6 text-center">
          Common Questions
        </h2>
        <FaqAccordion />
      </div>
    </div>
  </section>

</PageLayout>
