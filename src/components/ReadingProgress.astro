---
// ReadingProgress.astro - Reading progress bar at top of pillar pages
---

<div
  id="reading-progress"
  class="fixed top-16 left-0 right-0 z-30 h-1 bg-transparent pointer-events-none"
  aria-hidden="true"
>
  <div
    id="reading-progress-bar"
    class="h-full bg-[#E8913A] transition-[width] duration-100 ease-out"
    style="width: 0%"
  ></div>
</div>

<script>
  const bar = document.getElementById('reading-progress-bar');
  if (bar) {
    const update = () => {
      const scrollTop = window.scrollY;
      const docHeight = document.documentElement.scrollHeight - window.innerHeight;
      const progress = docHeight > 0 ? Math.min((scrollTop / docHeight) * 100, 100) : 0;
      bar.style.width = `${progress}%`;
    };
    window.addEventListener('scroll', update, { passive: true });
    update();
  }
</script>
