---
// [locale]/index.astro - Localized homepage
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero.astro';
import PainPoints from '../../components/PainPoints.astro';
import Differentiators from '../../components/Differentiators.astro';
import Testimonials from '../../components/Testimonials.astro';
import CtaSection from '../../components/CtaSection.astro';
import { getNonDefaultLocales, t } from '../../i18n/utils';
import type { Locale } from '../../i18n/config';

export function getStaticPaths() {
  return getNonDefaultLocales().map(locale => ({
    params: { locale },
    props: { locale },
  }));
}

const { locale } = Astro.props as { locale: Locale };
---

<PageLayout
  title={t(locale, 'site.name')}
  description={t(locale, 'hero.subheadline')}
  locale={locale}
>
  <Hero locale={locale} />
  <PainPoints locale={locale} />
  <Differentiators locale={locale} />
  <Testimonials locale={locale} />
  <CtaSection locale={locale} />
</PageLayout>
